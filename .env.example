# App ports (optional overrides)
# BACKEND_PORT=3001
# FRONTEND_PORT=3000
# BACKEND_SOURCE=http://localhost
# BACKEND_URL=${BACKEND_SOURCE}:${BACKEND_PORT}

# Prisma / Postgres (required)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres?schema=public

# NextAuth (required for admin)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_URL_INTERNAL=http://localhost:3000
# NEXTAUTH_SECRET=replace-with-a-long-random-string
# GITHUB_ID=your-github-oauth-client-id
# GITHUB_SECRET=your-github-oauth-client-secret
# GITHUB_ID_PERSONAL=your-personal-domain-client-id
# GITHUB_SECRET_PERSONAL=your-personal-domain-client-secret
# ALLOWED_GITHUB_USERS=your-github-username,another-username

# Vercel Blob (required for uploads)
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxx

# Optional: Chatbot / TTS (OpenAI)
# OPENAI_API_KEY=sk-xxx
# NEXT_PUBLIC_OPENAI_API_KEY=sk-xxx

# Optional: Contact form (Resend)
# RESEND_API_KEY=re_123
# CONTACT_EMAIL=you@yourdomain.com
# NEXT_PUBLIC_RESEND_API_KEY=re_123
# NEXT_PUBLIC_CONTACT_EMAIL=you@yourdomain.com
