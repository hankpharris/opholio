{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "FRONTEND_PORT",
                "BACKEND_PORT",
                "BACKEND_SOURCE",
                "BACKEND_URL",
                "OPENAI_API_KEY",
                "NEXT_PUBLIC_OPENAI_API_KEY"
            ]
        },
        "deploy": {
            "env": [
                "FRONTEND_PORT",
                "BACKEND_URL",
                "OPENAI_API_KEY",
                "NEXT_PUBLIC_OPENAI_API_KEY"
            ]
        }
    }
}
